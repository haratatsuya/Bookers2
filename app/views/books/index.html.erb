<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <h3>Your Profile</h3>
      <p><%= current_user.name %></p>
      <% if current_user.profile_image.attached? %>
        <%= image_tag current_user.profile_image, class: "img-thumbnail" %>
      <% else %>
        <%= image_tag 'default_profile_image.png', class: "img-thumbnail" %>
      <% end %>
      <p><%= current_user.introduction %></p>
      <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'btn btn-secondary' %>
    </div>
    <div class="col-md-8">
      <h4>All Books</h4>
      <%= link_to 'New Book', new_book_path, class: 'btn btn-primary mb-3' %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
