<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <h3>Posted by <%= @book.user.name %></h3>
      <% if @book.user.profile_image.attached? %>
        <%= image_tag @book.user.profile_image, class: "img-thumbnail" %>
      <% else %>
        <%= image_tag 'default_profile_image.png', class: "img-thumbnail" %>
      <% end %>
      <p><%= @book.user.introduction %></p>
    </div>
    <div class="col-md-8">
      <h4>Book Details</h4>
      <p><strong>Title:</strong> <%= @book.title %></p>
      <p><strong>Body:</strong> <%= @book.body %></p>
      <% if @book.user == current_user %>
        <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-secondary' %>
        <%= link_to 'Delete', book_path(@book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
